<!DOCTYPE html>
<html lang="pt-br">
    <%- include('partials/head') %>
    <body>
        <header>
            <h1><%= title %></h1>
            <%- include('partials/navbar.ejs') %>
        </header>

        
        <div class="list">
            <ul>
                <% users.forEach((user) => { %>
                    <li>
                        <%= user.name %> - <%= user.email %> - Idade: <%= user.age %> - 
                        <a href="/edit?id=<%= user._id %>">[Editar]</a> - 
                        <a href="/remove/<%= user._id %>">[Remover]</a>
                    </li>
                    
                <% }); %>
            </ul>

        </div>
        
    
        <%- include('partials/foot') %>
    </body>
</html>